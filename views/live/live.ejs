  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>

    $("select[name='team1_code']").on('change', function() {
      $(`select[name='team2_code'] option[value='${this.value}']`).attr("disabled", "disabled").siblings().removeAttr("disabled");;
    });

    $("select[name='team2_code']").on('change', function() {
      $(`select[name='team1_code'] option[value='${this.value}']`).attr("disabled", "disabled").siblings().removeAttr("disabled");;
    });

    const matchPostData = async () => {

      $('#processingModal').modal(
              {
                backdrop: 'static',
                keyboard: false
              },
              'show');


      const team1Code = document.getElementById("team1_code").value;
      const team1Score = document.getElementById("team1_score").value.trim();
      const team2Code = document.getElementById("team2_code").value;
      const team2Score = document.getElementById("team2_score").value.trim();
      const match_date = document.getElementById("mdatetime").value;
      const is_live = document.getElementById("match_live").value == "true";
      const match_status = document.getElementById("matchStatus").value.trim();
      const match_type = document.getElementById("match_type").value;
      const sendNotification = document.getElementById("sendNotification").checked;

      const data = {
        team1: {
          team_score: team1Score,
          team_code: team1Code
        },
        team2: {
          team_score: team2Score,
          team_code: team2Code
        },
        match_date: new Date(match_date),
        is_live,
        match_type,
        match_status
      }
      const res = await fetch("/api/live/create", {
        method: "POST",
        redirect: "follow",
        body: JSON.stringify(data),
        headers: {
          "Content-type": "application/json; charset=UTF-8",
        },
      });

      if (res.ok) {
        const result = await res.json();

          if (result.msg === 'success') {

            if (!sendNotification) {
              window.location = `/pages/live/edit/${result.matchId}`
              return;
            }

            const notifyRes = await fetch("/api/live/notification/send", {
              method: "POST",
              redirect: "follow",
              body: JSON.stringify({
                ...data,
                id: result.matchId,
                timeline_message: match_status,
              }),
              headers: {
                "Content-type": "application/json; charset=UTF-8",
              },
            });

            const notifyResult =  await notifyRes.json();

            if (notifyResult.msg === 'success') {
                window.location = `/pages/live/edit/${result.matchId}`
            } else {
              $("#processingModalTitleLabel").text("Failed to send a live match notification");
              $("#replaceBody").parent().html(`<div>${notifyResult.msg}</div>`);
            }
          } else {
            $("#processingModalTitleLabel").text("Failed to create a live match");
            $("#replaceBody").parent().html(`<div>${result.msg}</div>`);
          }


      }
    };
  </script>

