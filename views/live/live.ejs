                      class="form-control "
                      id="match_type"
                      name="match_type"
              >
                <option value="football">football</option>
                <option value="cricket">cricket</option>
              </select>
            </div>

            <div class="form-group">
              <label class="text-white" for="matchStatus"><h4>Match Status</h4></label>
              <textarea
                      required
                      class="form-control "
                      id="matchStatus"
                      placeholder="Match Started"
                      maxlength="35"
              ></textarea>
            </div>

