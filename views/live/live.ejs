                name="team1_score"
              />
            </div>

            <div class="form-group">
              <label for="team2_code" class="text-white"><h4>Team 2</h4></label>


            <select
            class="form-control mt-1"
            id="team2_code"
            name="team2_code"
            aria-label="Default select example"
          >
            <option value="100" disabled>CSE</option>
            <option value="101">IT</option>
            <option value="102">ECE</option>
            <option value="103">AEIE</option>
            <option value="104">EE</option>
            <option value="105">MECH</option>
            <option value="106">CIVIL</option>
            <option value="107">CHEMICAL</option>
            <option value="108">BT/FT</option>
            <option value="109">CSE CS</option>
            <option value="110">CSE DS</option>
            <option value="111">CSE AIML</option>
            <option value="112">MASTERS</option>
        </select>
            <input
              class="form-control mt-1"
              required
              placeholder="Score"
              id="team2_score"
              type="text"
              name="team1_score"
            />
            </div>
            <div class="form-group">
              <label class="text-white" for="mdatetime"><h4>Match Date and Time</h4></label>
              <input class="form-control" type="datetime-local" id="mdatetime" name="mdatetime">
            </div>

            <div class="form-group">
              <label class="text-white" for="match_live"><h4>Is Match Live?</h4></label>
              <select
                      class="form-control "
                      id="match_live"
                      name="match_live"
              >
                <option value="true">LIVE</option>
                <option value="false">NOT LIVE</option>
