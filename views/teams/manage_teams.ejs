<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>THE HIT TIMES</title>
  <link
          rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous"
  />
</head>

<style>
  .roundbth {
    border-radius: 25px;
  }
  body {
    background: linear-gradient(
            rgba(50, 176, 226, 0.5),
            rgba(228, 102, 180, 0.5)
    );
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .navbercolor {
  }
</style>

<body>
<nav
        class="navbar navbar-expand-sm navbar-light mb-3"
        style="color: rgb(16, 97, 247)"
>
  <div class="container">
    <button
            class="navbar-toggler mr-auto"
            data-toggle="collapse"
            data-target="#navbarNav"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" href="/">THE HIT TIMES</a>
    <% if(user) { %>
      <a
              class="nav-link ml-auto btn btn-danger text-white roundbth px-3"
              href="/auth/logout"
      >Logout</a
      >
    <% } else{ %>
      <a
              class="nav-link ml-auto btn btn-primary text-white roundbth px-3"
              href="/pages/login"
      >Login</a
      >
    <%}%>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/"><b>Home</b></a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/pages/createpost"
          ><b>Create Post</b></a
          >
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/pages/sendnotification">
            <b>Send Notification</b>
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/pages/display"><b>Display</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/pages/live/create"><b>Go Live</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/pages/live/all"><b>Manage Live</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/pages/teams/manage"><b>Manage Teams</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/api/posts"><b>JSON</b></a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mb-5">
  <% if(delResponse=='post deleted successfully') {%>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong><%= delResponse%></strong>
      <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <%} else if(delResponse=='post delete failed') {%>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong><%= delResponse%></strong>
      <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

  <%}%>

    <a href="/pages/teams/create" class="btn btn-primary btn-sm m-3">Create Team</a>

    <% teams.forEach((team) => {%>

  <div
          class="card p-2 m-3"
          style="
          background: linear-gradient(
            rgba(13, 178, 243, 0.5),
            rgba(228, 102, 180, 0.5)
          );
          border-radius: 0px;
        "
  >
      <div class="card-body shadow-lg">
        <div class="row">
          <div class="col">
            <h4>
              <%= team.dept_name%>
            </h4>
            <p><%= team.football.players.length %> Football players</p>
            <p><%= team.cricket.players.length %> Cricket players</p>
          </div>
        </div>
        <div>
          <a
                  class="btn btn-success btn-sm"
                  href="/pages/teams/edit/<%=team.team_code%>/football"
                  role="button"
          >Football</a>

          <a
                  class="btn btn-success btn-sm"
                  href="/pages/teams/edit/<%=team.team_code%>/cricket"
                  role="button"
          >Cricket</a>
         <!-- <a
                  class="btn btn-danger btn-sm"
                  href="/api/team/del/<%=team.team_code%>"
                  role="button"
          >Delete</a>-->
        </div>
      </div>
    </div>
  <%})%>

</div>
</div>

<%-include("../footer")-%>
</body>
</html>
